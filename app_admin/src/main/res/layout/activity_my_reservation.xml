<!-- 내 정보 액티비티 레이아웃 -->
<layout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools">

	<LinearLayout
		android:layout_width = "match_parent"
		android:layout_height = "match_parent"
		android:background = "#dcdcdc"
		android:orientation = "vertical">

		<android.support.design.widget.AppBarLayout
			android:layout_width = "match_parent"
			android:layout_height = "62dp"
			android:background = "#FFF">

			<RelativeLayout
				android:layout_width = "match_parent"
				android:layout_height = "match_parent">

				<!-- 뒤로가기 버튼 -->
				<Button
					android:id = "@+id/btn_back"
					android:layout_width = "30dp"
					android:layout_height = "30dp"
					android:layout_centerVertical = "true"
					android:layout_marginLeft = "15dp"
					android:background = "@drawable/left_arrow"
					android:onClick = "onClick"/>

				<ImageView
					android:layout_width="150dp"
					android:layout_height="50dp"
					android:layout_centerHorizontal = "true"
					android:layout_centerVertical = "true"
					android:src="@drawable/logo"/>
			</RelativeLayout>

		</android.support.design.widget.AppBarLayout>

		<!-- 예약한 것이 없을 때 보여줄 화면 -->
		<LinearLayout
			android:id = "@+id/if_no_reservation"
			android:layout_width = "match_parent"
			android:layout_height = "match_parent"
			android:background = "#e7e7e7"
			android:gravity = "center"
			android:orientation = "vertical"
			tools:visibility = "gone">

			<ImageView
				android:layout_width = "300dp"
				android:layout_height = "wrap_content"
				android:adjustViewBounds = "true"
				android:src = "@drawable/store"/>

			<TextView
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:layout_marginBottom = "30dp"
				android:gravity = "center"
				android:text = "아직 예약한 가게가 없어요\n맛있는 식사를 찾아 떠나보세요"
				android:textSize = "15sp"/>
		</LinearLayout>

		<!-- 예약한 것이 있을 때 보여줄 화면 -->
		<ScrollView
			android:id = "@+id/if_reservation_exists"
			android:layout_width = "match_parent"
			android:layout_height = "0dp"
			android:layout_weight = "1"
			android:visibility = "gone"
			tools:visibility = "visible">

			<LinearLayout
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:orientation = "vertical">

				<LinearLayout
					android:layout_width = "match_parent"
					android:layout_height = "300dp">

					<FrameLayout
						android:layout_width = "match_parent"
						android:layout_height = "match_parent">

						<ImageView
							android:layout_width = "match_parent"
							android:layout_height = "240dp"
							android:scaleType = "centerCrop"
							android:src = "@drawable/store_image"/>

						<LinearLayout
							android:layout_width = "match_parent"
							android:layout_height = "match_parent"
							android:layout_marginLeft = "8dp"
							android:layout_marginRight = "8dp"
							android:layout_marginTop = "155dp"
							android:background = "#fff"
							android:gravity = "center_horizontal"
							android:orientation = "vertical">

							<View
								android:layout_width = "match_parent"
								android:layout_height = "5dp"
								android:background = "#fd4a4a"/>

							<View
								android:layout_width = "match_parent"
								android:layout_height = "0dp"
								android:layout_weight = "1"/>

							<TextView
								android:id = "@+id/txt_restaurant_name"
								android:layout_width = "wrap_content"
								android:layout_height = "wrap_content"
								android:layout_marginBottom = "5dp"
								android:text = "ELBON the table"
								android:textColor = "@android:color/black"
								android:textSize = "28sp"
								android:textStyle = "bold"/>

							<LinearLayout
								android:layout_width = "wrap_content"
								android:layout_height = "wrap_content">

								<ImageView
									android:layout_width = "15dp"
									android:layout_height = "15dp"
									android:src = "@drawable/spot"/>

								<TextView
									android:id = "@+id/txt_restaurant_location"
									android:layout_width = "wrap_content"
									android:layout_height = "wrap_content"
									android:layout_marginBottom = "5dp"
									android:text = "Seoul Gangnam  Sinsa"
									android:textColor = "#b2b2b2"
									android:textSize = "12sp"/>
							</LinearLayout>

							<LinearLayout
								android:layout_width = "wrap_content"
								android:layout_height = "wrap_content">

								<ImageView
									android:layout_width = "15dp"
									android:layout_height = "15dp"
									android:src = "@drawable/phone"/>

								<TextView
									android:id = "@+id/txt_phone"
									android:layout_width = "wrap_content"
									android:layout_height = "wrap_content"
									android:text = "02-1234-5678"
									android:textColor = "#b2b2b2"
									android:textSize = "10sp"/>
							</LinearLayout>

							<View
								android:layout_width = "match_parent"
								android:layout_height = "0dp"
								android:layout_weight = "1"/>

							<View
								android:layout_width = "match_parent"
								android:layout_height = "5dp"
								android:background = "#fd4a4a"/>
						</LinearLayout>
					</FrameLayout>

				</LinearLayout>

				<LinearLayout
					android:layout_width = "match_parent"
					android:layout_height = "match_parent"
					android:orientation = "vertical">

					<android.support.v7.widget.CardView
						android:layout_width = "match_parent"
						android:layout_height = "200dp"
						android:layout_marginTop = "5dp"
						app:cardElevation = "5dp">

						<LinearLayout
							android:layout_width = "match_parent"
							android:layout_height = "match_parent"
							android:orientation = "vertical"
							android:padding = "22dp">

							<LinearLayout
								android:layout_width = "wrap_content"
								android:layout_height = "wrap_content"
								android:gravity = "center">

								<ImageView
									android:layout_width = "20dp"
									android:layout_height = "20dp"
									android:src = "@drawable/detailpage_map"/>

								<TextView
									android:layout_width = "wrap_content"
									android:layout_height = "wrap_content"
									android:text = "지도"
									android:textSize = "17sp"/>
							</LinearLayout>
						</LinearLayout>

					</android.support.v7.widget.CardView>
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</layout>